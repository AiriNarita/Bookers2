

<div class="container">

  <!-- Validation Errors -->
  <div class="error_message">
    <% if @user.errors.any? %>
      <h4><%= @user.errors.count %> error prohibited this obj from being saved:</h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>


  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Edit User</h1>
         <%= form_with model: @user do |f| %>
      <div class="form-group">
      <p>name</p>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <p>Image</p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
      <p>introduction</p>
        <%= f.text_area :introduction %>
      </div>  
        
      <div class="form-group">
        <%= f.submit 'Update User', class: 'btn btn-secondary' %>
      </div>
      
        <% end %>

    </div>      
  </div>      
</div>
 