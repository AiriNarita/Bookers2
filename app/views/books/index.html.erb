

 <%= render partial: "partial/user_show", locals: { user: current_user }%>

 <%= render partial: "partial/book_new", locals: { book: @book } %>

<h2>Books</h2>
  <table>

    <thead>
      <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
       <tr>
         <th> <%= image_tag book.user.get_profile_image(100,100) %> </th>
         <th> <%= book.title %> </th>
         <th> <%= book.body %> </th>
       </tr>
     <% end %>
    </tbody>
  </table>