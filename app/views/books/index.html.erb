
<div class="container px-5 px-sm-0">
  <!--Flash message-->
  <%= flash[:notice] %>
  
  <!-- Validation Errors -->
  <div class="error_message">
    <% if @book.errors.any? %>
      <h4><%= @book.errors.count %> error prohibited this book from being saved:</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "partial/user_show", locals: { user: current_user }%>
      <%= render partial: "partial/book_new", locals: { book: @book } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </th>
              <th> <%= link_to book.title, book_path(book.id) %> </th>
              <th> <%= book.body %> </th>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>  
</div> 