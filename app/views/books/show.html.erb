
<div class= "container" >
  <!--Flash message-->
  <div>
    <%= flash[:notice] %>
  </div>

  <div class="error_message">
    <% if @book.errors.any? %>
    <h4><%= @book.errors.count %> error prohibited this book from being saved:</h4>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  <% end %>


  </div>





  <div class= "row">
      <div class = "col-md-3">
       <%= render partial: "partial/user_show", locals: { user: @user }%>
       <%= render partial: "partial/book_new", locals: { book: @book }%>
      </div>

      <div class= "col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tr>
              <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path(@user) %> </td>
              <td><%= link_to @book.title, book_path(@book) %> </td>
              <td><%= @book.body %></td>
                   <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success', edit_book_57911method: :get %> </td>
              <td><%= link_to "Destroy", book_path(@book), class:'btn btn-sm btn-danger destroy_book_57911', method: :delete, data: { confirm: '本当に消しますか？' } %> %> </td>
                   <% end %>
            </tr>
          </table>
      </div>
  </div>
</div>