
 <%= render partial: "partial/user_show", locals: { user: @user }%>

  <%= render partial: "partial/book_new", locals: { book: @book }%>


<div class = "show box">

  <h2>Book detail</h2>
  <table>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %><br><%= link_to @user.name, user_path(@user) %> </td>
      <td><%= link_to @book.title, book_path(@book) %> </td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path(@book), method: :get %> </td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete %> </td>
    </tr>
  </table>

</div>